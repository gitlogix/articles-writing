extends layout

block content
    h1 #{post}
    form(method='POST', action='/article/add')
        .form-group
            lable Title
            input.form-control(name='title', type='text')
        .form-group
            lable Author
            input.form-control(name='author', type='text')
        .form-group
            lable Body
            textarea.form-control(name='body', type='text')
        .form-group
            input.btn.btn-primary(value='Submit', type='submit')            